var should_submit = false;


function popup_confirmation(form, text) {
  if (should_submit)
    return true;

  //open Popup
  $('.popup').addClass('is-visible');
  $('.popup-message')[0].innerHTML = text;

  $('#yes').on('click', function(event){
    event.preventDefault();
    $('.popup').removeClass('is-visible');
    should_submit = true;
    form.submit();
  });

  return false;
};