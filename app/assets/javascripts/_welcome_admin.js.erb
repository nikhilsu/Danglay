var adminListener = {
  addListeners: function() {
    var path = window.location.href;
    var path_substring = path.substring(path.lastIndexOf('/')+1);
    if (path_substring == "admin") {
      $(".pink-bubble").css("background", "#b11c54");
      bubble_select(".pink-bubble")
    }
    if (path_substring == "admin_cabpool_new") {
      $(".blue-bubble").css("background", "#11c1f3");
      bubble_select(".blue-bubble")
    }
    if (path_substring == "admin_user_new") {
      $(".green-bubble").css("background", "#05A054");
      bubble_select(".green-bubble")
    }
  }
}

$(document).ready(function() {
    adminListener.addListeners();
});

$(document).on('page:load', function() {
  adminListener.addListeners();
});
