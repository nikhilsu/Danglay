var adminListener = {
  addListeners: function() {
    var path = window.location.href;
    var path_substring = path.substring(path.lastIndexOf('/')+1);
    if (path_substring == "admin") {
      removeActiveStyleForAllTabsOnBanner();
      $("#admin-edit").addClass('active');
    }
    if (path_substring == "admin_cabpool_new") {
      removeActiveStyleForAllTabsOnBanner();
      $("#admin-create").addClass('active');
    }
    if (path_substring == "admin_user_new") {
      removeActiveStyleForAllTabsOnBanner();
      $("#admin-add-user").addClass('active');
    }
  }
};

function removeActiveStyleForAllTabsOnBanner(){
  $(".tabs").children().each(function(){
    $(this).removeClass('active');
  });
}

$(document).ready(function() {
  adminListener.addListeners();
});

$(document).on('page:load', function() {
  adminListener.addListeners();
});
