<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'cab.png' %>
  <title><%= full_title(yield(:title)) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
<div class="wrapper">
  <%= render 'layouts/header' %>

  <% if yield(:banner_ui) == 'Admin' %>
      <%= render 'layouts/primary_admin_banner' %>
  <% elsif yield(:banner_ui) == 'Secondary' %>
      <%= render 'layouts/secondary_banner' %>
  <% elsif yield(:banner_ui) == 'Response' %>
      <%= render 'layouts/response_pages_template' %>
  <% else %>
      <%= render 'layouts/primary_banner' %>
  <% end %>

  <%= render 'layouts/popup' %>

  <div class="container information">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
    <% end %>
    <%= yield %>
  </div>
  <div class="push"></div>
</div>

<%= render 'layouts/footer' %>
</body>
</html>