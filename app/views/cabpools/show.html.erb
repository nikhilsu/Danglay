<%= render 'layouts/welcome' %>
<% if user_cabpool_exists? || user_requested_cabpool_exists? %>
    <h1>Your Pool(s)</h1>
<% end %>

<% if user_cabpool_exists? %>
    <div class="your-pool">
      <%= render users_cabpool %>
    </div>
<% end %>

<% if user_requested_cabpool_exists? %>
    <div class="your-pool">
      <%= render users_requested_cabpool %>
    </div>
<% end %>

<% if user_cabpool_exists? || user_requested_cabpool_exists? %>
    <h2>Cab Pools</h2>
<% else %>
    <%= render 'layouts/tabs' %>
<% end %>
<div>
  <%= form_tag show_cabpools_path do %>
      <div class='form-group col-md-4'>
        <%= collection_select(:localities, :search, Locality.all, :id, :name, {prompt: true}) %>
      </div>
      <%= submit_tag "Search", class: "btn" %>
  <% end %>
  <%= render @cabpools %>
</div>
