<% if user_cabpool_exists? || user_requested_cabpool_exists? %>
    <div><h1 class = 'center'>Your Cabpool/s</h1></div>
<% end %>
<div class="container pool-list">
  <div class="row list-label">
    <div class="col-20 vendors">Vendors</div>
    <div class="col-20 location">Location</div>
    <div class="col-20 timer">Timing</div>
    <div class="col-20 seats">Seat left</div>
    <div class="col-100"></div>
  </div>
  <ul>

<% if user_cabpool_exists? %>
    <div class="your-pool">
      <%= render users_cabpool %>
    </div>
<% end %>

<% if user_requested_cabpool_exists? %>
    <div class="your-pool">
      <%= render users_requested_cabpool %>
    </div>
<% end %>
</ul>
</div>
