<% provide(:title, 'Edit Profile') %>
<% if FEATURES.active?('user_feature') %>
<div class="container">
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1><%= "Hi, #{@user.name}" %></h1>

    <div class="col-md-offset-3">
      <p> In order to edit your details please fill in the following fields.</p>
    </div>

    <%= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-md-3", control_col: "col-md-7") do |f| %>
    <%= f.text_area :emp_id %>
    <%= f.text_area :address %>
    <%= f.text_field :phone_no %>

    <%= f.collection_select(:locality, @localities, :id, :name, {prompt: true}) %>

    <div class="form-group <% unless @locality_errors.nil? %> has-error <% end %>">
      <div class="col-md-7 col-md-offset-3">
        <input class="form-control" type="text" name="user[other]" id="otherBox" style="display: none" placeholder="(Other Location)"/>
        <%= render 'shared/error_messages', errors: @locality_errors if !@locality_errors.nil?%>
      </div>
    </div>

    <%= f.submit "Update Profile",class: "btn center-block"%>
    <% end %>

</div>
</div>
</div>
<% end %>
