<% provide(:title, 'Sign Up') %>
<% if FEATURES.active?('user_feature') %>
<div class="container">
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1><%= 'Hi, ' + ' ' + @user.name %></h1>
    <div class="col-md-offset-2">

    <p>You have signed in with <b><%= @user.email%></b></p>

    <p> In order to proceed, please complete your details below.</p>

    </div>
    <%= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-md-2", control_col: "col-md-8") do |f| %>
        <%= f.text_field :emp_id , label: 'Employee ID'%>
        <%= f.text_area :address %>
        <%= f.collection_select(:locality, @localities, :id, :name, {prompt: true}, class: 'form-control') %>
        <div class="form-group">
          <div class="col-md-8 col-md-offset-2">
            <input class="form-control" type="text" name="user[other]" id="otherBox" style="display: none" placeholder="(Other Location)"/>
          </div>
        </div>
        <%= f.submit "Update Profile",class: "btn btn-primary col-md-offset-2"%>
    <% end %>
  </div>
</div>
</div>
<% end %>