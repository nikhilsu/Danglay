<% provide(:title, 'Update Profile') %>
<% if FEATURES.active?('user_feature') %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1><%= "Hi, #{@user.name}" %></h1>

      <div class="col-md-offset-3">
        <p>You have signed in with <b><%= @user.email%></b></p>
        <p> In order to proceed, please complete your details below.</p>
      </div>
      <%= render 'user_details_form'%>

    </div>
  </div>
  </div>
<% end %>
